rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuarios autenticados pueden leer/escribir sus propios datos
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Solo administradores pueden gestionar usuarios
    match /usuarios/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.rol == 'Administrador';
    }
    
    // Productos - según permisos
    match /productos/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.permisos.productos.crear == true;
    }
    
    // Roles y configuración - solo admin
    match /roles/{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.rol == 'Administrador';
    }
    
    // Categorías y proveedores - lectura general, escritura con permisos
    match /{collection}/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.rol == 'Administrador';
    }
  }
}